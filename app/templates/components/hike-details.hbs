<div class="hike-detail row">
  <div class="col-sm-10">
    <h1>{{hike.name}}</h1>
    <h3><em>{{hike.location}}</em></h3>
    <h3>Difficulty: {{hike.difficulty}}</h3>
    <img src="{{hike.image}}" alt="{{hike.name}}" />
    <p>{{hike.description}}</p>
    <br>
    {{#if hike.onFavorites}}
      <h4>This hike is already on your favorites list!</h4>
    {{else}}
      <button {{action 'addToFavorites' hike}}>Add this Hike to your Favorites</button>
    {{/if}}
  </div>
<br>
</div>
