{{#if addNewReview}}
<div>
  <form>
    <div class="form-group">
      <label for="author">Author</label>
      {{input value=author id="author" class="form-control"}}
    </div>

    <div class="form-group">
      <select {{action 'chooseRating' on='change'}}>
        <option value="null">Select a Rating. 1 is terrible, 5 is fantastic.</option>
        <option value= 1>1</option>
        <option value= 2>2</option>
        <option value= 3>3</option>
        <option value= 4>4</option>
        <option value= 5>5</option>
      </select>
    </div>

    <div class="form-group">
      <label for="comment">Additional Comments</label>
      {{textarea rows="8" cols="40" value=comment id="comment" class="form-control"}}
    </div>


    <button {{action 'saveReview'}}>Submit Review</button>

  </form>
</div>
{{else}}
  <button class="btn-lg btn-primary" {{action 'reviewFormShow'}}>Add a Review</button>
{{/if}}
